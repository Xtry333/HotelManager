{
    "compilerOptions": {
        "outDir": "./public/js/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "node_modules/*",
                "src/*",
                "tests/*"
            ]
        },
        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths"
            }
        ]
    }
}